@{
    ViewData["Title"] = "Cliente";
}
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-mask/dist/jquery.mask.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery-input-mask/dist/jquery.inputmask.js"></script>
    <script src="~/lib/jquery-input-mask/dist/bindings/inputmask.binding.js"></script>
</head>

<body>
    <!-- Button trigger modal -->
    <div class="row">
        <div class="col-xxl-8">
            <input type="text" class="form-control" id="pesquisa" placeholder="Pesquisar" />
        </div>
        <div class="col-xxl-4">
            <div class="text-end">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addClienteModal">
                    Adicionar novo cliente
                </button>
            </div>
        </div>
    </div>
    
    
    <!-- Modal -->
    <div class="modal fade" id="addClienteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Adicionar novo cliente</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="label lowOp" for="nomeCliente">Nome do cliente</label>
                        <input type="text" class="form-control" id="nomeCliente" placeholder="Digite..." />
                    </div>
                    <div class="form-group">
                        <div class="form-label">
                            <label class="label lowOp" for="TipoCliente">Tipo do cliente</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="pF" value="PF">
                            <label class="form-check-label" for="TipoPessoa1">Pessoa Física</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="pJ" value="PJ">
                            <label class="form-check-label" for="TipoPessoa2">Pessoa Jurídica</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="label lowOp"  for="telefoneContato">Telefone</label>
                        <input type="text" class="form-control" id="telefoneContato" data-inputmask="'mask': '(99) 9999-9999'" placeholder="Digite..." />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Adicionar</button>
                </div>
            </div>
        </div>
    </div>
</body>